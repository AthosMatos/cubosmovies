generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String? @unique
  password String?
}

model Movies {
  id             Int           @id @default(autoincrement())
  title          String
  original_title String
  subtitle       String?
  synopsis       String?
  genre          MovieGenres[]
  popularity     Float?
  vote_average   Float?
  vote_count     Int?
  release_date   DateTime?
  duration       Int?
  situation      String?
  language       String?
  budget         Float?
  revenue        Float?
  profit         Float?
  poster         String?
  backdrop       String?
  trailer        String?
}

model MovieGenres {
  id     Int      @id @default(autoincrement())
  name   String
  movies Movies[]
}
